<div class="container">
  <div class="card postCard">
    <div class="card-header">
      {{post.title}}
    </div>
    <div class="card-body">
      <h5 class="card-title">Created By:
        {{post.user.username}}
      </h5>
      <p class="card-text">
        {{post.content}}
      </p>
    </div>
    <div class="card-footer">Date Created:
       {{format_date post.dateCreated}}
    </div>
  </div>
  <form>
    <div class="mb-3">
      <label for="postCommentField" class="form-label">Comment:</label>
      <textarea class="form-control" id="postCommentField" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary d-grid col-2 mx-auto" id="addCommentBtn">Add Comment</button>
  </form>
</div>

