<div class="container">
  <div class="postBtns">
    <button type="button" class="updateBtn" data-postId="{{post.id}}">Update Post</button>
    <button type="button" class="deleteBtn" data-postId="{{post.id}}">Delete Post</button>
  </div>
  <div class="card postCard">
    <div class="card-header">
      {{post.title}}
    </div>
    <div class="card-body">
      <h5 class="card-title">Created By:
        {{post.user.username}}
      </h5>
      <div class="card-text">
        <input type="text" class="form-control-plaintext postTitle" value="{{post.title}}">
        <br>
        <textarea class="form-control-plaintext postContent" >{{post.content}}</textarea>
      </div>
    </div>
    <div class="card-footer">Date Created:
       {{format_date post.dateCreated}}
    </div>
  </div>
  <div class="container comment">
    <h2 class="comments">Comments:</h2>
    <div class="row justify-content-evenly">
      {{#each comments as |comment| }}
          <div class="card postCard">
            <div class="card-header">
              {{comment.user.username}}
            </div>
            <div class="card-body">
              <p class="card-text">
                {{comment.text}}
              </p>
            </div>
            <div class="card-footer">Date Created:
              {{format_date comment.dateCreated}}
            </div> 
          </div>     
      {{/each}}
    </div>
  </div>
  <form>
    <button type="submit" class="btn btn-primary d-grid col-2 mx-auto" id="addCommentBtn" data-postId="{{post.id}}">Add Comment</button>
    <div class="mb-3">
      <label for="postCommentField" class="form-label"></label>
      <textarea class="form-control" id="postCommentField" rows="3"></textarea>
    </div>    
  </form>
</div>

