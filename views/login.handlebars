<div class="container">
  <form class="container justify-content-center" id="signinBtn">
    <h1 class="h3 mb-3 mt-5 text-center fw-normal" id="signIn">Please sign in</h1>
    
    <div class="form-floating mb-3 col-6 d-flex justify-content-center offset-md-3">
      <input type="text" class="form-control" id="usernameField" placeholder="Username">
      <label for="usernameField">Username</label>
    </div>
    <div class="form-floating mb-3 col-6 d-flex justify-content-center offset-md-3">
          <input type="password" class="form-control" id="passwordField" placeholder="Password">
          <label for="passwordField">Password</label>
        </div>
    <button type="submit" class="btn btn-primary d-grid col-2 mx-auto" >Sign In</button>
  </form>
</div>
